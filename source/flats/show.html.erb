<!-- source/flats/show.html.erb -->

<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= image_path flat.picture %>'); height: 50vh; background-position: center;">
</div>

<div class="header-flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">
          <div class="header-flat-owner text-center">
            <%= image_tag flat.owner_picture, class: "img-circle" %>
            <p><%= flat.owner_nick_name %></p>
          </div>
          <div class="header-flat-name">
            <h1><%= flat.summary %></h1>
            <p><%= flat.city %></p>
            <% flat.nb_etoiles.times do |i|%>
              <i class="fa fa-star" style="color: #ffb400"></i>
            <% end %>
            <% (5 - flat.nb_etoiles).times do |i|%>
              <i class="fa fa-star" style="color: #cacccd"></i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-xs12 col-sm-4">
        <form action="#">
          <h4>Book this flat</h4>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input id="checkin" class="form-control" placeholder="checkin" type="text">
              </div>
              <div class="col-xs-6">
                <input class="form-control" placeholder="checkout" type="text">
              </div>
            </div>
          </div>
          <div class="form-group">
              <select name="" id="guests" class="form-control">
                <option value="1">1 guest</option>
                <option value="2">2 guest</option>
                <option value="3">3 guest</option>
              </select>
          </div>
          <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
        </form>
      </div>
    </div>
  </div>
</div>

<div class="flat-description">
  <div class="container">
    <div class="row">
     <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2>About this flat</h2>
      <p><%= "#{flat.flat_description}"%></p>
     </div>
    </div>
  </div>
</div>





